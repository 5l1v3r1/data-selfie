{
    "name": "Data Selfie",
    "version": "0.0.15",
    "description": "Collect and analyze data from your interactions on facebook.com.",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "img/icon-48.png",
        "default_title": "Data Selfie",
        "default_popup": "views/popup.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "https://www.facebook.com/*",
        "http://www.facebook.com/*",
        "http://api.dataselfie.it/*",
        "downloads"
    ],
    "icons": {
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "content_scripts": [{
        "matches": ["https://www.facebook.com/*", "http://www.facebook.com/*"],
        "js": ["js/content.js"],
        "css": ["css/fblayer.css"],
        "run_at": "document_idle"
    }],
    "homepage_url": "http://dataselfie.it",
    "manifest_version": 2,
    "options_ui": {
        "page": "views/options.html",
        "chrome_style": true,
        "open_in_tab": false
    },
    "omnibox": { "keyword": "ds" }
}
